<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".MainActivity"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/mainActionRecyclerBtn"
            style="@style/Theme.MultiSelectInRecyclerVIew.ButtonStyle"
            android:text="Move to Action View RecyclerView"

            android:background="@android:color/holo_orange_light"
        android:textSize="17dp" />

        <Button
            android:id="@+id/mainDeleteRecyclerBtn"
            style="@style/Theme.MultiSelectInRecyclerVIew.ButtonStyle"
            android:background="@android:color/holo_green_light"
            android:text="Move to Delete Button RecyclerView"
            android:textSize="17dp" />


    </LinearLayout>

</RelativeLayout>